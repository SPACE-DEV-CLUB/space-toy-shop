{
  "name": "styled-component",
  "version": "2.8.0",
  "description": "Generates styled-component snippets from colors, text styles and layers.",
  "author": {
    "name": "Mortz Gruber"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zeplin/stylesheet-extensions.git"
  },
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec",
    "publish": "zem publish",
    "test": "zem test"
  },
  "dependencies": {
    "zem": "^1.3.0",
    "zeplin-extension-style-kit": "^3.1.0"
  },
  "zeplin": {
    "displayName": "cyclus-styled-component",
    "projectTypes": [
      "web"
    ],
    "options": [
      {
        "name": "Color format",
        "type": "picker",
        "id": "colorFormat",
        "options": [
          {
            "name": "Default",
            "value": "default"
          },
          {
            "name": "HEX",
            "value": "hex"
          },
          {
            "name": "RGB",
            "value": "rgb"
          },
          {
            "name": "HSL",
            "value": "hsl"
          }
        ],
        "default": "default"
      },
      {
        "name": "Dimensions",
        "type": "switch",
        "id": "showDimensions",
        "default": true
      },
      {
        "name": "Unitless line-height",
        "type": "switch",
        "id": "unitlessLineHeight",
        "default": true
      },
      {
        "name": "Text styles as variables",
        "type": "switch",
        "id": "mixin",
        "default": true
      },
      {
        "name": "Default values",
        "type": "switch",
        "id": "showDefaultValues",
        "default": true
      },
      {
        "name": "Display resources from linked and parent styleguides",
        "type": "switch",
        "id": "useLinkedStyleguides",
        "default": true
      },
      {
        "name": "Use “rem” unit",
        "type": "switch",
        "id": "useRemUnit",
        "default": true
      },
      {
        "name": "Show padding, margin estimations (experimental)",
        "type": "switch",
        "id": "showPaddingMargin",
        "default": true
      }
    ]
  },
  "devDependencies": {
    "babel-loader": "^8.2.2",
    "core-js": "^3.9.1"
  }
}
